//servidor
#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <stdlib.h>
#define FIFO "meu_fifo"
#define MSG_SIZE 81
#define OPENMODE1 (O_WRONLY | O_NONBLOCK)
#define OPENMODE2 (O_RDONLY | O_NONBLOCK)
#define FIFO1 "recebeFifo"
#define FIFO2 "enviaFifo"
int main(void){
    int fifo;
    char message[MSG_SIZE];
    if (access(FIFO1, F_OK) == -1){
      if (mkfifo (FIFO1, S_IRUSR) != 0){
          fprintf (stderr, "Erro ao criar FIFO %s\n", FIFO1);
          return -1;
      }
    }
    if (access(FIFO2, F_OK) == -1){
      if (mkfifo (FIFO2,S_IWUSR) != 0){
          fprintf (stderr, "Erro ao criar FIFO %s\n", FIFO1);
          return -1;
      }
    }

    
}